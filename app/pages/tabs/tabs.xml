<Page 
  xmlns="http://schemas.nativescript.org/tns.xsd"
  navigatingTo="onNavigatingTo">

  <Page.actionBar>
      <ActionBar title="Tabs (icon)">
          <NavigationButton icon="res://ic_arrow_back" tap="{{ goBack }}"/>
      </ActionBar>
  </Page.actionBar>

  <GridLayout>
    <TabView id="tabView" 
      selectedIndex="{{ selectedIndex }}" 
      tabsBackgroundColor="#4527a0"
      android:cssClass="android-tab-view" 
      android:selectedColor="#ffab00">
      <TabView.items>

        <TabViewItem iconSource="{{ selectedIndex == 0 ? 'res://stack1' : 'res://stack' }}">
          <TabViewItem.view>
            <StackLayout>
                <Label text="Tab 1"/>
            </StackLayout>
          </TabViewItem.view>
        </TabViewItem>

        <TabViewItem iconSource="{{ selectedIndex == 1 ? 'res://grid1' : 'res://grid' }}">
          <TabViewItem.view>
            <StackLayout>
                <Label text="Tab 2"/>
            </StackLayout>
          </TabViewItem.view>
        </TabViewItem>

        <TabViewItem iconSource="{{ selectedIndex == 2 ? 'res://wrap1' : 'res://wrap' }}">
          <TabViewItem.view>
            <StackLayout>
                <Label text="Tab 3"/>
            </StackLayout>
          </TabViewItem.view>
        </TabViewItem>

        <TabViewItem iconSource="{{ selectedIndex == 3 ? 'res://dock1' : 'res://dock' }}">
          <TabViewItem.view>
            <StackLayout>
                <Label text="Tab 4"/>
            </StackLayout>
          </TabViewItem.view>
        </TabViewItem>

        <TabViewItem iconSource="{{ selectedIndex == 4 ? 'res://absolute1' : 'res://absolute' }}">
          <TabViewItem.view>
            <StackLayout>
                <Label text="Tab 5"/>
            </StackLayout>
          </TabViewItem.view>
        </TabViewItem>

      </TabView.items>
    </TabView>
  </GridLayout>

</Page>
