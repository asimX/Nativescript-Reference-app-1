<Page 
  xmlns="http://schemas.nativescript.org/tns.xsd"
  navigatingTo="onNavigatingTo">

  <Page.actionBar>
      <ActionBar title="Horizontal Scrolling">
          <NavigationButton icon="res://ic_arrow_back" tap="{{ goBack }}"/>
      </ActionBar>
  </Page.actionBar>

  <StackLayout>
    <ScrollView orientation="horizontal">
        <StackLayout orientation="horizontal" class="scroll-menu">

            <GridLayout rows="*, auto" columns="*, auto" class="scroll-pane">
                <Button row="1" col="1" text="Button 1" />
            </GridLayout>

            <GridLayout rows="*, auto" columns="*, auto" class="scroll-pane">
                <Button row="1" col="1" text="Button 2" />
            </GridLayout>

            <GridLayout rows="*, auto" columns="*, auto" class="scroll-pane">
                <Button row="1" col="1" text="Button 3" />
            </GridLayout>

            <GridLayout rows="*, auto" columns="*, auto" class="scroll-pane">
                <Button row="1" col="1" text="Button 4" />
            </GridLayout>

        </StackLayout>
    </ScrollView>
  </StackLayout>

</Page>
