<Page 
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:FAB="nativescript-floatingactionbutton">

    <Page.actionBar>
      <ActionBar title="FAB">
          <NavigationButton icon="res://ic_arrow_back" tap="goBack"/>
      </ActionBar>
    </Page.actionBar>

      <GridLayout rows="auto, *">

      <ListView items="{{ myItems }}" row="1">
        <ListView.itemTemplate>
          <StackLayout>
            <Label text="{{ title }}" />
          </StackLayout>
        </ListView.itemTemplate>
      </ListView>

      <AbsoluteLayout row="1" cssClass="fabContainer" >
        <FAB:fab tap="fabTap"
                icon="res://fav"
                rippleColor="#f1f1f1"
                class="fab-button" />
      </AbsoluteLayout>
      
    </GridLayout>

</Page>
