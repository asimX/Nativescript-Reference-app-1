<Page 
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:FAB="nativescript-floatingactionbutton">

    <Page.actionBar>
      <ActionBar title="FAB">
          <NavigationButton icon="res://ic_arrow_back" tap="goBack"/>
      </ActionBar>
    </Page.actionBar>

    <ScrollView>
      <GridLayout rows="auto, *">

        <ListView items="{{ users }}" row="0">
          <ListView.itemTemplate>
            <Label text="{{ name }}" />
          </ListView.itemTemplate>
        </ListView>
        <FAB:fab tap="fabTap"
                  row="1"
                  icon="res://fav"
                  rippleColor="#f1f1f1"
                  class="fab-button" />
      </GridLayout>
    </ScrollView>

</Page>
