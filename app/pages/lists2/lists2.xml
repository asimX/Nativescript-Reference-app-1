<Page 
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:CheckBox="nativescript-checkbox"
  navigatingTo="onNavigatingTo">

  <Page.actionBar>
      <ActionBar title="Lists 2">
          <NavigationButton icon="res://ic_arrow_back" tap="goBack"/>
      </ActionBar>
  </Page.actionBar>


  <GridLayout>
    <TabView tabsBackgroundColor="#4527a0"
      android:cssClass="android-tab-view" 
      color="#fff"
      android:selectedColor="#ffab00">
      <TabView.items>

        <TabViewItem android:title="Switch">
          <TabViewItem.view>
            <StackLayout>
            
              <ListView items="{{ myItems }}" class="list">
                <ListView.itemTemplate>
                  <GridLayout columns="*, auto">
                    <StackLayout col="0">
                      <Label text="{{ title }}" class="heading" />
                      <Label text="{{ about }}" class="sub_heading" />
                    </StackLayout>
                    <Switch checked="false" class="toggle_in_list" col="1" />
                  </GridLayout>
                </ListView.itemTemplate>
              </ListView>

            </StackLayout>
          </TabViewItem.view>
        </TabViewItem>

        <TabViewItem android:title="Checkbox">
          <TabViewItem.view>
            <StackLayout>

              <ListView items="{{ myItems }}" class="list">
                <ListView.itemTemplate>
                  <GridLayout columns="auto, *">
                    <CheckBox:CheckBox text="" class="cb_in_list" checked="false" col="0" />
                    <StackLayout col="1">
                      <Label text="{{ title }}" class="heading" />
                      <Label text="{{ about }}" class="sub_heading" />
                    </StackLayout>
                  </GridLayout>
                </ListView.itemTemplate>
              </ListView>

            </StackLayout>
          </TabViewItem.view>
        </TabViewItem>

        <TabViewItem android:title="Avatar">
          <TabViewItem.view>
            <StackLayout>

              

            </StackLayout>
          </TabViewItem.view>
        </TabViewItem>

        <TabViewItem android:title="No Lines">
          <TabViewItem.view>
            <StackLayout>

              

            </StackLayout>
          </TabViewItem.view>
        </TabViewItem>
        
      </TabView.items>
    </TabView>
  </GridLayout>

</Page>
