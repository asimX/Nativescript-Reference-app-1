<Page 
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:RL="nativescript-ripple"
  navigatingTo="onNavigatingTo">

  <Page.actionBar>
      <ActionBar title="Waves">
          <NavigationButton icon="res://ic_arrow_back" tap="goBack"/>
      </ActionBar>
  </Page.actionBar>


  <ScrollView>
    <StackLayout>
      <RL:Ripple rippleColor="#d50000">
        <Label text="Red Ripples!!!" class="message" textWrap="true" />
      </RL:Ripple>
 
      <RL:Ripple rippleColor="#fff000">
        <Image src="~/images/batman.jpg" margin="10" stretch="aspectFit" />
      </RL:Ripple>
 
      <RL:Ripple>
        <Label text="Default Ripple" class="message" textWrap="true" />
      </RL:Ripple>
    </StackLayout>
  </ScrollView>

</Page>
